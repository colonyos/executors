{
    "conditions": {
        "executortype": "hpc-executor"
    },
    "funcname": "execute",
    "kwargs": {
        "cmd": "python3",
        "args": [
            "/tmp/helloworld/helloworld.py"
        ],
        "keep_snapshots": false
    },
    "fs": [
        {
            "label": "src",
            "dir": "/tmp/helloworld"
        },
        {
            "label": "data",
            "dir": "/tmp/data"
        },
        {
            "label": "result",
            "dir": "/tmp/helloworld/result",
            "sync_on_completion": true
        }
    ],
    "maxwaittime": -1,
    "maxexectime": 10,
    "maxretries": 3
}
