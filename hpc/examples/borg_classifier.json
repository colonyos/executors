{
    "conditions": {
        "executortype": "borg-hpcexecutor",
        "nodes": 1,
        "processes_per_node": 1,
        "walltime": 600,
        "gpu": {
            "count": 1
        }
    },
    "funcname": "execute",
    "kwargs": {
        "cmd": "python3",
        "docker-image": "johan/classifier",
        "rebuild-image": false,
        "args": [
            "/cfs/src/classifier.py"
        ],
        "keep_snapshots": false
    },
    "fs": [
        {
            "label": "src",
            "dir": "/src"
        },
        {
            "label": "results",
            "dir": "/results",
            "sync_on_completion": true
        }
    ],
    "maxwaittime": -1,
    "maxexectime": 600,
    "maxretries": 3
}
