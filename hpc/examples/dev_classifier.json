{
    "conditions": {
        "executortype": "dev-hpcexecutor",
        "nodes": 1,
        "processes-per-node": 1,
        "walltime": 600,
        "mem": "1000Mi",
        "cpu": "1000m",
        "gpu": {
            "count": 1
        }
    },
    "funcname": "execute",
    "kwargs": {
        "cmd": "python3",
        "docker-image": "johan/classifier",
        "rebuild-image": false,
        "args": [
            "/cfs/src/{processid}/classifier.py"
        ]
    },
    "fs": {
        "mount": "/cfs",
        "snapshots": [
            {
                "snapshotid": "{snapshotid}",
                "label": "/src",
                "dir": "/src/{processid}",
                "keepfiles": true,
                "keepsnaphot": true
            },
            {
                "snapshotid": "{snapshotid}",
                "label": "/data",
                "dir": "/data",
                "keepfiles": true,
                "keepsnaphot": true
            }
        ],
        "dirs": [
            {
                "label": "/results",
                "dir": "/results",
                "keepfiles": true,
                "onconflicts": {
                    "onstart": {
                        "keeplocal": false
                    },
                    "onclose": {
                        "keeplocal": true
                    }
                }
            }
        ]
    },
    "maxwaittime": -1,
    "maxexectime": 600,
    "maxretries": 3
}
